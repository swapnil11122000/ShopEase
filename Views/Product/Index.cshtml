@model IEnumerable<ECommWeb.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<body style="background-color:#adb5bd;">
    <br /><br />

    <form class="row g-2" method="post" action="/Product/Search">
       
        <div class="col-auto">
            <label   class="visually-hidden">Search Product</label>
            <input type="text" class="form-control" name="product" placeholder="Search Product">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-dark mb-3">Search </button>
        </div>
    </form>
<table class="table table-gray table-striped" style="border:2px solid black">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
               @* @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |*@
                    @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-dark" })
                    @* @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
                    <a asp-action="Create">Add Product</a>*@
                       @*  <button type="submit" class="btn btn-dark" onclick="Add">Buy</button> *@
                        @Html.ActionLink("Add to Cart", "AddtoCart", new { id = item.Id }, new { @class = "btn btn-dark" })
                      @*   <button type="submit" class="btn btn-dark" onclick="cart">Add to Cart</button> *@



            
                      
            </td>
        </tr>
}
    </tbody>
</table>

 

</body>