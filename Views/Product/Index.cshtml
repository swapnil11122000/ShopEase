@model IEnumerable<ECommWeb.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<body style="background-color:#adb5bd;">
    <br />
    <br />

    <form class="row g-2" method="post" action="/Product/Search">

        <div class="col-auto">
            <label class="visually-hidden">Search Product</label>
            <input type="text" id="txtSearchProd" class="form-control" name="product" placeholder="Search Product by Name">
        </div>
        <div class="col-auto">
            <button type="submit" id="btnSearch" class="btn btn-dark mb-3">Search </button>
        </div>
    </form>
    <table class="table table-gray table-striped" style="border:2px solid black">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
            
                <th>
                    Category
                </th>
                <th>
                   Available Quantity
                </th>
                <th>
                    Short Text
                </th>
            
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @item.Category.CategoryName
                    </td>
                 
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
               
                    <td>
                        @* @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |*@
                        @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-dark" })
                        @* @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
                    <a asp-action="Create">Add Product</a>*@
                        @*  <button type="submit" class="btn btn-dark" onclick="Add">Buy</button> *@
                        @Html.ActionLink("Add to Cart", "AddtoCart", new { id = item.ProductID }, new { @class = "btn btn-dark" })
                        @*   <button type="submit" class="btn btn-dark" onclick="cart">Add to Cart</button> *@





                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            // This function runs when the document (HTML) has finished loading

            $("#btnSearch").click(function () {
                // This function runs when the button with id="btnSearch" is clicked

                var txtvalue = $("#txtSearchProd").val();
                // Get the value entered in the input field with id="txtSearchProd"

                if (txtvalue == null || txtvalue == '') {
                    // Check if the value is null or empty

                    alert('Please give input for search');
                    // Display an alert message

                    return false;
                    // Return false to prevent the form from submitting (if it's within a form)
                }
            });
        });

    </script>


</body>