@model ECommWeb.Models.Product

@{
    ViewData["Title"] = "Details";
}

<body style="background-color:#adb5bd;">
    <br />
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Product Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                Short Text:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortText)
            </dd>

            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-2">
                Category:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>

            <dt class="col-sm-2">
                Unit Price:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitPrice)
            </dd>
            <dt class="col-sm-2">
                Image:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImgUrl)
            </dd>

        </dl>
    </div>
</body>
<div>
    @*  @Html.ActionLink("Edit", "Edit", new {  id = Model.Id }) |*@
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
    @* <button type="button" class="btn btn-secondary">Buy</button>*@
    <a asp-controller="Vendor" asp-action="Details" class="btn btn-dark" asp-route-id="@Model.VendorID">Vendor Details</a>
    @if (User.Claims.Any(c => c.Type == "Role" && c.Value == "0"))
    {
        <a asp-controller="Product" asp-action="AddOrder" class="btn btn-dark" asp-route-id="@Model.ProductID">Buy</a>
    }
</div>
