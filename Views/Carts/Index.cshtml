@model IEnumerable<ECommWeb.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color:#adb5bd;">


    <p>
        @* <a asp-action="Create">Create New</a> *@
    </p>
    <table class="table" style="border:2px solid black">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                         @item.Product.Name 
                    </td>
                    <td>
                    @*  @Html.DisplayFor(modelItem => item.)  *@
                    </td>
                    <td>
                         @item.Product.Price  
                    </td>
                    <td>

                        <a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.CartID">Delete</a>|
                        <a asp-controller="Product" asp-action="Details" class="btn btn-dark" asp-route-id="@item.ProductID">Details</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
